<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_navigation_shadow"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bnv"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:elevation="0dp"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            app:itemIconSize="40dp"
            app:itemIconTint="@color/bnv_selector"
            app:itemTextColor="@color/bnv_selector"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="@dimen/design_fab_image_size"
            android:layout_height="@dimen/design_fab_image_size"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/primary"
            android:elevation="0dp"
            android:src="@drawable/ic_bottom_navigation_plane"
            app:backgroundTint="@color/white"
            app:borderWidth="5dp"
            app:elevation="0dp"
            app:fabCustomSize="@dimen/design_fab_image_size"
            app:itemHorizontalTranslationEnabled="true"
            app:layout_anchor="@id/bnv"
            app:layout_anchorGravity="center_horizontal|center"
            app:tint="@color/white" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/main_frm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        app:defaultNavHost="true"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>