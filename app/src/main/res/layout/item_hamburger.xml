<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:id="@+id/item_hamburger_row"
    android:layout_marginVertical="10dp"
    android:background="@drawable/shape_hamburger_item"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_item_post_hamburger"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_bottom_navigation_calendar"/>

    <TextView
        android:id="@+id/tv_item_post_hamburger"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="example text"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"/>


</LinearLayout>